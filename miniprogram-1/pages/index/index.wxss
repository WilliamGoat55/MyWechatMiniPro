.info{
  min-height: 400rpx;
  display: flex;  /*变成横排*/
  flex-direction: column;
  text-align: right;
  justify-content: flex-end;
  background-color: rgb(207, 203, 203);
  font-size: 100rpx;
}

.op{
  text-align: right;
  background-color: rgb(172, 169, 169);
  font-size: 80rpx;
}

.buttons > view{
  display: flex;
  font-size: 50rpx;
}

.buttons > view > view{
  flex:1;  /*平均分配*/
  text-align: center;  /*居中*/
  height: 150rpx;
  line-height: 150rpx;
  border: solid  0.5px  #a5a4a4;
  margin: -1px 0 0 -1px;
}
